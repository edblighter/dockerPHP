app.localhost {
    tls internal
    log {
        # output logs to standard error (console)
        output stderr
    }

    root * /srv/public

    encode zstd gzip
    import ./security
    # Or serve a PHP site through php-fpm:
    php_fastcgi app:9000 {
        root /var/www/public
    }
    file_server
}

dbadmin.localhost {
  	tls internal
	reverse_proxy dbadmin:9000
}

mailhog.localhost {
  	tls internal
	reverse_proxy mailhog:8025
}
